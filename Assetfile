require "rake-pipeline-web-filters"

output "public/spades"

input "sources" do
  match "**/*.js" do |input|
    minispade rewrite_requires: true, string: true, module_id_generator: proc { |input|
      id = input.path.dup
      id.sub!('/lib/', '/')
      id.sub!(/-([\d].?){3}\.js$/, '')
      id.sub!(/\/main$/, '')
      id
    }
  end
end
